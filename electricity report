<script>
        // Common Chart Options
        Chart.defaults.font.family = "'Noto Sans KR', sans-serif";
        Chart.defaults.color = '#666';

        // 1. Trend Chart (Line)
        const ctxTrend = document.getElementById('trendChart').getContext('2d');
        new Chart(ctxTrend, {
            type: 'line',
            data: {
                labels: ['1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월', '10월', '11월', '12월'],
                datasets: [
                    {
                        label: '평균 단가 (원/kWh)',
                        data: [120, 122, 118, 115, 115, 130, 145, 150, 135, 120, 125, 128],
                        borderColor: '#051C2C',
                        backgroundColor: 'transparent',
                        borderWidth: 2,
                        yAxisID: 'y',
                        tension: 0.4
                    },
                    {
                        label: '연료비 조정단가',
                        data: [5, 5, 5, 3, 3, 3, 5, 5, 5, 7, 7, 7],
                        borderColor: '#00A9CE',
                        backgroundColor: 'rgba(0, 169, 206, 0.1)',
                        borderWidth: 1,
                        borderDash: [5, 5],
                        fill: true,
                        yAxisID: 'y1',
                        tension: 0.1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top', align: 'end', labels: { boxWidth: 10, usePointStyle: true } }
                },
                scales: {
                    x: { grid: { display: false } },
                    y: { 
                        type: 'linear', display: true, position: 'left', grid: { borderDash: [2, 2] },
                        title: { display: true, text: '단가' }
                    },
                    y1: { 
                        type: 'linear', display: true, position: 'right', grid: { display: false },
                        min: 0, max: 20,
                        title: { display: true, text: '조정단가' }
                    }
                }
            }
        });

        // 2. Bar Chart (Peak & Power Factor)
        const ctxBar = document.getElementById('barChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: ['Q1', 'Q2', 'Q3', 'Q4'],
                datasets: [
                    {
                        label: '최대수요(kW)',
                        data: [450, 380, 520, 410],
                        backgroundColor: '#051C2C',
                        yAxisID: 'y'
                    },
                    {
                        label: '평균역률(%)',
                        data: [95, 96, 92, 94],
                        type: 'line',
                        borderColor: '#E67E22',
                        borderWidth: 2,
                        pointBackgroundColor: '#fff',
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false } // Save space
                },
                scales: {
                    x: { grid: { display: false } },
                    y: { position: 'left', grid: { display: false } },
                    y1: { position: 'right', min: 80, max: 100, grid: { borderDash: [2, 2] } }
                }
            }
        });

        // 3. Doughnut Chart (Time Mix)
        const ctxDoughnut = document.getElementById('doughnutChart').getContext('2d');
        new Chart(ctxDoughnut, {
            type: 'doughnut',
            data: {
                labels: ['경부하 (Off-Peak)', '중간부하 (Mid)', '최대부하 (On-Peak)'],
                datasets: [{
                    data: [45, 35, 20],
                    backgroundColor: ['#E0E0E0', '#7F8C8D', '#00A9CE'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'right', labels: { boxWidth: 10, font: { size: 10 } } }
                },
                cutout: '65%'
            }
        });
    </script>
